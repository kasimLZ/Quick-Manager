@model LoginViewModel
@section head{
    @Html.Partial("_Partial_Base_Head")
}

@section css{
    @Html.Partial("_Partial_Base_CSS")
}


<div class="login-box">
    <div class="login-logo">
        <a href="javacript:;"><b>Admin</b>LTE</a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <form asp-controller="Login" asp-area="Account" method="post">
            <input type="hidden" asp-for="ReturnUrl" />
            <div class="form-group has-feedback">
                <input class="form-control" placeholder="Username" asp-for="Username" autofocus>
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Password" asp-for="Password" autocomplete="off">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <div class="row">
                <div class="col-xs-8">
                    <div class="checkbox icheck">
                        <label>
                            <input asp-for="RememberLogin" type="checkbox" /> Remember Me
                        </label>
                    </div>
                </div>
                <!-- /.col -->
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
        <!-- /.social-auth-links -->
        <a href="#">I forgot my password</a><br>
        <a href="register.html" class="text-center">Register a new membership</a>
    </div>
    <!-- /.login-box-body -->
</div>
<!-- /.login-box -->

@section scripts{

    @Html.Partial("_Partial_Base_Script")
}